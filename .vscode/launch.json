{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run textworker only",
            "type": "debugpy",
            "request": "launch",
            "module": "textworker",
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "../libtextworker_py"
            },
            "args": [
                "--custom-data-dir",
                "../tew-data",
                "--no-splash=2"
            ],
            "justMyCode": true
        },
        {
            "name": "Open README.md",
            "type": "debugpy",
            "request": "launch",
            "module": "textworker",
            "console": "internalConsole",
            "args": ["README.md"],
            "justMyCode": true
        },
        {
            "name": "Open textworker/",
            "type": "debugpy",
            "request": "launch",
            "module": "textworker",
            "console": "internalConsole",
            "env": {
                "PYTHONPATH": "../libtextworker"
            },
            "args": ["textworker/"],
            "justMyCode": true
        }
    ]
}